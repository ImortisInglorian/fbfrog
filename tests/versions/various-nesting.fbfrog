-ifdef __FB_DOS__
	-declareversions VER 1 2 3
-else
	-declareversions VER 1 2 3 4 5
-endif

-select VER
-case 1
	-define VER 1
-case 2
	-define VER 2
-case 3
	-define VER 3
	-declarebool DEPRECATED_V3
-case 4
	-define VER 4
	-declarebool DEPRECATED_V3
-case 5
	-define VER 5
	-declarebool DEPRECATED_V3
	-declarebool DEPRECATED_V5
-endselect

-ifdef __FB_WIN32__
	-declarebool UNICODE
	-ifdef UNICODE
		-define UNICODE
	-else
		-define ANSI
	-endif
	-declarebool DLL
	-ifdef DLL
		-define DLL
		-define SHAREDLIB
	-else
		-define STATICLIB
	-endif
-endif

-ifdef __FB_LINUX__
	-declarebool FOO1
	-ifdef FOO1
	-else
		-declarebool FOO2
		-ifdef FOO2
			-declarebool FOO3
			-ifdef FOO3
			-else
				-declarebool FOO4
			-endif
		-else
		-endif
	-endif
-endif

-ifdef DEPRECATED_V3
	-define DROP_OLD_V1_SYMBOLS 1
	-define DROP_OLD_V2_SYMBOLS 1
-endif
