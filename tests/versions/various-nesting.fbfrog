-declareversions VER 1 2 3

-selectversion
-case 1
	-define VER 1
-case 2
	-define VER 2
	-declarebool DEPRECATED_V2
-case 3
	-define VER 3
	-declarebool DEPRECATED_V2
-endselect

-iftarget windows
	-declarebool UNICODE
	-ifdef UNICODE
		-define UNICODE
	-else
		-define ANSI
	-endif
	-declarebool DLL
	-ifdef DLL
		-define DLL
		-define SHAREDLIB
	-else
		-define STATICLIB
	-endif
-endif

-ifdef DEPRECATED_V2
	-define DROP_OLD_V1_SYMBOLS 1
	-define DROP_OLD_V2_SYMBOLS 1
-endif
